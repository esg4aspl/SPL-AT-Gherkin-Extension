{
	"name": "spl-at-gherkin-vscode",
	"displayName": "SPL-AT-Gherkin-VSCode",
	"description": "VSCode extension for SPL-AT-Gherkin",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration":[
			{
				"title": "SPL-AT Gherkin",
				"properties": {
					"spl-at-gherkin-vscode.featurePath" : {
						"description": "Please enter Feature directory path that includes feature files which are written in SPL-AT Gherkin. \n Example : /Users/username/projectFolder/featureFolder/",
                    	"type": "string",
						"required": true,
						"default":""
					},
					"spl-at-gherkin-vscode.pagePath" : {
						"description": "Please enter Page directory path that includes auto-generated page classes. \n Example : /Users/username/projectFolder/pageFolder/",
                    	"type": "string",
						"required": true,
						"default":""
					},
					"spl-at-gherkin-vscode.testPath" : {
						"description": "Please enter Test directory path that includes auto-generated test classes. \n Example : /Users/username/projectFolder/testFolder/",
                    	"type": "string",
                    	"required": true,
						"default":""
					},
					"spl-at-gherkin-vscode.XMLPath" : {
						"description": "Please enter directory of testng.xml path. \n Example : /Users/username/projectFolder/testngXMLFolder/",
                    	"type": "string",
                    	"required": true,
						"default":""
					}
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "package-explorer",
					"title": "SPL AT Gherkin",
					"icon": "media/spl-at-gherkin.svg"
				}
			]
		},
		"views": {
			"package-explorer": [
				{
					"id": "feature-explorer",
					"name": "Features"
				},
				{
					"id": "code-explorer",
					"name": "Code"
				}
			]
		},
		"commands": [
			{
				"command": "spl-at-gherkin-vscode.createNewFeature",
				"title": "New Feature"
			},
			{
				"command": "feature-explorer.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "code-explorer.refresh",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "feature-explorer.generateCode",
				"title": "Generate Code",
				"icon": "$(run-all)"
			},
			{
				"command": "spl-at-gherkin-vscode.openEditor",
				"title": "Open"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "feature-explorer.refresh",
					"when": "view == feature-explorer",
					"group": "navigation"
				},
				{
					"command": "code-explorer.refresh",
					"when": "view == code-explorer",
					"group": "navigation"
				},
				{
					"command": "feature-explorer.generateCode",
					"when": "view == feature-explorer",
					"group": "navigation"
				}
			]
		},
		"languages": [
            {
                "id": "feature",
                "aliases": [
                    "feature",
                    "feature"
                ],
                "extensions": [
                    ".feature"
                ]
            }
        ],
		"grammars": [{
            "language": "feature",
            "scopeName": "source.feature",
            "path": "./syntaxes/feature.tmLanguage.json"
        }]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.44.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.30.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"shelljs": "^0.8.4"
	}
}
